<div class="media">
    <div class="media-body">
        <% avatar_url = post.user.avatar_url(48) %>
        <% if avatar_url %>
            <div class="media-left">
                <%= image_tag avatar_url, class: 'media-object' %>
            </div>
        <% end %>
        <h4 class="media-heading">
            <%= link_to post.title, topic_post_path(post.topic, post) %>
        </h4>
        <small>
            <%= pluralize(post.comments.count, 'Comment') %> | <%= pluralize(post.votes.count, 'Vote') %>
        </small>
    </div>
</div>
